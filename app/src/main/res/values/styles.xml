<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"></style>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 可滑动页面主题 -->
    <style name="Theme.Slidr.Slidable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- These values must be set for this mechanism to work -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- 使用标准的style，如果使用ThemeOverlay.AppCompat.Dark.ActionBar在白色背景的标题栏下看不到点击水波纹效果-->
    <style name="Base.ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- 导航栏默认的图标颜色 如返回键的颜色-->
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--没有选中的样式-->
    <style name="MainTabNormalText">
        <item name="android:textSize">14sp</item>
    </style>

    <!--选中的样式-->
    <style name="MainTabSelectedText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">@dimen/common_margin_level_2</item>
        <item name="android:paddingRight">@dimen/common_margin_level_2</item>
        <item name="android:paddingTop">@dimen/common_margin_level_3</item>
        <item name="android:paddingBottom">@dimen/common_margin_level_3</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 水平线-->
    <style name="HorizontalDivideLine">
        <item name="android:layout_height">2px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>
    <!-- 垂直线-->
    <style name="VerticalDivideLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">2px</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <!-- 水平虚线-->
    <style name="GapHorizontalDivideLine">
        <!-- 虚线不显示原因在于设置的 view 的高度与 shape 虚线的高度相同。
        只需要将 view 中的 高度设置的比 shape 虚线的高度大就可以。 -->
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <!-- 增加此属性防止 3.0以上设备虚线会变实线的问题 -->
        <item name="android:layerType">software</item>
        <item name="android:background">@drawable/shape_gap_line</item>
    </style>

    <!-- 垂直虚线-->
    <style name="GapVerticalDivideLine">
        <item name="android:layout_height">match_parent</item>
        <!-- 虚线不显示原因在于设置的 view 的高度与 shape 虚线的高度相同。
       只需要将 view 中的 宽度设置的比 shape 虚线的高度大就可以。 -->
        <item name="android:layout_width">2dp</item>
        <!-- 增加此属性防止 3.0以上设备虚线会变实线的问题 -->
        <item name="android:layerType">software</item>
        <item name="android:background">@drawable/shape_gap_line</item>
    </style>

    <!--透明Activity-->
    <style name="ActivityTranslucentTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ItemParentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layer_list_item_parent</item>
        <item name="android:paddingTop">1px</item>
        <item name="android:paddingBottom">1px</item>
        <item name="android:layout_marginTop">@dimen/common_margin_level_2</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ItemRippleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_height_level_2</item>
        <item name="android:background">@drawable/item_view_bg_material</item>
        <item name="android:paddingLeft">@dimen/common_margin_level_2</item>
        <item name="android:paddingRight">@dimen/common_margin_level_2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color_level_1</item>
    </style>

    <style name="ItemTextMatchStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color_level_1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ItemTextWrapStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color_level_1</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

</resources>
