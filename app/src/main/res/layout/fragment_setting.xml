<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_setting_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_wallhaven" />

    <TextClock
        android:id="@+id/tv_setting_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_height_level_2"
        android:layout_marginTop="@dimen/common_status_bar_height"
        android:format12Hour="MM月dd日 EEEE"
        android:format24Hour="MM月dd日 EEEE"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_18" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_setting_top">

        <LinearLayout
            android:id="@+id/ll_setting01"
            style="@style/ItemParentStyle"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_setting_portraits"
                style="@style/ItemRippleStyle"
                android:text="个人头像设置" />

            <View style="@style/GapHorizontalDivideLine" />

            <TextView
                android:id="@+id/tv_setting_github"
                style="@style/ItemRippleStyle"
                android:text="Blog" />

            <View style="@style/GapHorizontalDivideLine" />

            <TextView
                android:id="@+id/tv_setting_beauty"
                style="@style/ItemRippleStyle"
                android:text="Beauty" />

            <View style="@style/GapHorizontalDivideLine" />

            <TextView
                android:id="@+id/tv_setting_version_update"
                style="@style/ItemRippleStyle"
                android:text="版本更新" />

            <View style="@style/GapHorizontalDivideLine" />

            <TextView
                android:id="@+id/tv_setting_video"
                style="@style/ItemRippleStyle"
                android:text="视频" />

            <View
                android:id="@+id/view_video_divider"
                style="@style/GapHorizontalDivideLine" />

            <TextView
                android:id="@+id/tv_setting_check_permission"
                style="@style/ItemRippleStyle"
                android:text="检查权限" />

            <View style="@style/GapHorizontalDivideLine" />

            <TextView
                android:id="@+id/tv_setting_about"
                style="@style/ItemRippleStyle"
                android:text="关于"
                android:transitionName="@string/transition_item_name" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
